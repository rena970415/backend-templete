// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URI")
}

model User {
  id        Int      @id @default(autoincrement()) // 기본 키
  email     String   @unique // 이메일 (중복 X)
  nickname  String // 닉네임
  password  String // 해싱된 비밀번호
  createdAt DateTime @default(now()) // 생성일자
}
